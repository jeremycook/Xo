@{
    var htmlAttributes = new RouteValueDictionary(new { @class = "multiline-text form-control", rows = 5 });
    if (ViewData.ModelMetadata.IsRequired)
    {
        htmlAttributes.Add("aria-required", true);
    }
}
@Html.TextArea("", Convert.ToString(ViewData.TemplateInfo.FormattedModelValue), htmlAttributes)