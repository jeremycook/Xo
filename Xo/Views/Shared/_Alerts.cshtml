@using Xo.Areas.Infrastructure.Alerts
@if (TempData.GetAlerts().Any())
{
    foreach (var alert in TempData.GetAlerts())
    {
        <div class="alert @alert.AlertClass alert-dismissable">
            <button type="button" class="close" data-dismiss="true" aria-hidden="true">
                &times;
            </button>
            @alert.Message
        </div>
    }
}