@model Xo.Areas.Identity.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Set password";
}

<h1>@ViewBag.Title</h1>
<p class="text-info">
    You do not have a local username/password for this site. Add a local account so you can log in without an external login.
</p>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Create Local Login</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.BootstrapLabelFor(m => m.NewPassword)
        <div class="col-md-10">
            @Html.EditorFor(m => m.NewPassword)
        </div>
    </div>
    <div class="form-group">
        @Html.BootstrapLabelFor(m => m.ConfirmPassword)
        <div class="col-md-10">
            @Html.EditorFor(m => m.ConfirmPassword)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Set password" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}